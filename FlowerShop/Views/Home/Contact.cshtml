<!-- contact form -->
<div class="contact-from-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="form-title">
                    <h2>Bạn có thắc mắc?</h2>
                    <p>Để lại thông tin của bạn dưới đây, chúng tôi sẽ cố gắng giải đáp!</p>
                </div>
                <div id="form_status"></div>
                <div class="contact-form">
                    <form type="POST" id="fruitkha-contact" onSubmit="return valid_datas( this );">
                        <p>
                            <input type="text" placeholder="Name" name="name" id="name">
                            <input type="email" placeholder="Email" name="email" id="email">
                        </p>
                        <p>
                            <input type="tel" placeholder="Phone" name="phone" id="phone">
                            <input type="text" placeholder="Subject" name="subject" id="subject">
                        </p>
                        <p><textarea name="message" id="message" cols="30" rows="10" placeholder="Message"></textarea></p>
                        <input type="hidden" name="token" value="FsWga4&f6aw" />
                        <p><input type="submit" value="Submit"></p>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-form-wrap">
                    <div class="contact-form-box">
                        <h4><i class="fas fa-map"></i> Địa chỉ cửa hàng</h4>
                        <p>140, Lê Trọng Tấn <br> Phường Tây Thạnh, Quận Tân Phú <br> TPHCM</p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="far fa-clock"></i> Giờ mở cửa</h4>
                        <p>Từ thứ 2 - thứ 6: 8 - 9 PM <br> Thứ 7 và Chủ Nhật: 10 - 8 PM </p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="fas fa-address-book"></i> Liên hệ</h4>
                        <p>Phone: 091700172 <br> Email: florynshop@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end contact form -->
