@model IEnumerable<FlowerShop.Models.FLOWER>
@{
    ViewBag.Title = "Details_Occasions";
    Layout = "~/Views/Shared/Admin_LayoutPage1.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Chi tiết dịp</h2>



    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên hoa</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Ảnh</th>
                <th>Số lượng</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FLOWER_NAME)</td>
                    <td>@Html.DisplayFor(modelItem => item.DESCRIPTIONS)</td>
                    <td>@Html.DisplayFor(modelItem => item.PRICE)</td>
                    <td>
                        <img src="~/Images/@item.URL_IMAGE" alt="@item.FLOWER_NAME" style="max-height: 100px; max-width: 100px;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.STOCK)</td>
                    <td>


                        @Html.ActionLink("Delete", "DeleteFlowerFromOccasion", new { flowerId = item.ID_FLOWER, occasionId = ViewBag.OccasionId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


