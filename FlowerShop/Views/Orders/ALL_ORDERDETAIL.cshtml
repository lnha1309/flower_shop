@model IEnumerable<FlowerShop.Models.ORDERDETAIL>
@{
    ViewBag.Title = "ALL_ORDERDETAIL";
    Layout = "~/Views/Shared/Admin_LayoutPage1.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4 text-center">Chi tiết đơn hàng</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Tên hoa</th>
                <th>Số lượng</th>
                <th>Giá tiền</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FLOWER.FLOWER_NAME)</td>
                    <td>@Html.DisplayFor(modelItem => item.QUANTITY)</td>
                    <td>@Html.DisplayFor(modelItem => item.PRICE)</td>

                </tr>
            }
        </tbody>
    </table>

</div>

