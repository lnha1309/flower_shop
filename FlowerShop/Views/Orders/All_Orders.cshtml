@model IEnumerable<FlowerShop.Models.ORDER>
@{
    ViewBag.Title = "All_Orders";
    Layout = "~/Views/Shared/Admin_LayoutPage1.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách đơn hàng</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Tên khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CUSTOMER.FULLNAME)</td>
                    <td>@Html.DisplayFor(modelItem => item.ORDER_DATE)</td>
                    <td>@Html.DisplayFor(modelItem => item.TOTAL_AMOUNT)</td>
                    <td>@Html.DisplayFor(modelItem => item.ORDER_STATUS)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Update_Orders", new { id = item.ID_ORDER }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Chi tiết đơn hàng", "ALL_ORDERDETAIL", new { id = item.ID_ORDER }, new { @class = "btn btn-info btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


