@model FlowerShop.Models.FLOWER
@{
    ViewBag.Title = "UpdateFlower";
    Layout = "~/Views/Shared/Admin_LayoutPage1.cshtml";
}

<h2 class="text-center my-4">Cập nhật bông hoa</h2>


@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            @Html.HiddenFor(model => model.ID_FLOWER)

            <div class="mb-3">
                @Html.LabelFor(model => model.FLOWER_NAME, "Tên bông hoa", new { @class = "form-label" })
                @Html.EditorFor(model => model.FLOWER_NAME, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên bông hoa" } })
                @Html.ValidationMessageFor(model => model.FLOWER_NAME, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.DESCRIPTIONS, "Mô tả", new { @class = "form-label" })
                <textarea id="DESCRIPTIONS" name="DESCRIPTIONS" class="form-control">@Model.DESCRIPTIONS</textarea>
                <script>
                    CKEDITOR.replace('DESCRIPTIONS');
                </script>
                @Html.ValidationMessageFor(model => model.DESCRIPTIONS, "", new { @class = "text-danger" })
            </div>


            <div class="mb-3">
                @Html.LabelFor(model => model.PRICE, "Giá", new { @class = "form-label" })
                @Html.TextBoxFor(model => model.PRICE, new { @class = "form-control", @type = "number", @step = "0.01", @placeholder = "Nhập giá" })
                @Html.ValidationMessageFor(model => model.PRICE, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.URL_IMAGE, "Đường dẫn hình ảnh", new { @class = "form-label" })
                @Html.EditorFor(model => model.URL_IMAGE, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập URL hình ảnh" } })
                @Html.ValidationMessageFor(model => model.URL_IMAGE, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.STOCK, "Số lượng", new { @class = "form-label" })
                @Html.EditorFor(model => model.STOCK, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số lượng" } })
                @Html.ValidationMessageFor(model => model.STOCK, "", new { @class = "text-danger" })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </div>
    </div>
}

<div class="mt-3 text-center">
    @Html.ActionLink("Quay lại danh sách", "All_Flower", "Products", new { @class = "btn btn-secondary" })
</div>

