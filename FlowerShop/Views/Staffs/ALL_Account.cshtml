@model IEnumerable<FlowerShop.Models.ACCOUNT>
@{
    ViewBag.Title = "ALL_Account";
    Layout = "~/Views/Shared/Admin_LayoutPage1.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
<div class="container mt-4">
    <h2 class="text-center">Danh sách tài khoản</h2>

    <p>
        @Html.ActionLink("Tạo tài khoản", "Add_Account", null, new { @class = "btn btn-success mb-3" })
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    Tài khoản
                </th>
                <th>
                    Mật khẩu
                </th>
                <th>
                    Vai trò
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.USERNAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PASSWORDS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ROLES)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Update_Accounts", new { id = item.ID_ACCOUNT }, new { @class = "btn btn-warning btn-sm me-2" })

                        @Html.ActionLink("Xoá", "DeleteAccounts", new { id = item.ID_ACCOUNT }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Quay lại trang", "All_Staff", "Staffs", null, new { @class = "btn btn-secondary" })
    </div>
</div>


